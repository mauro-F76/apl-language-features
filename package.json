{
	"name": "apl-language-features",
	"displayName": "APL Language Features",
	"description": "Provides rich language support for APL Macro Language.",
	"version": "1.1.0",
	"publisher": "MauroFecarotta",
	"repository": {
		"type": "git",
		"url": "https://github.com/mauro-F76/apl-language-features.git"
	},
    "icon": "images/icon.png",
	"license": "LICENSE.md",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
        "onLanguage:atoolsoftwareapl"
    ],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
